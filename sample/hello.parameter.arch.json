{
    "$ref": "https://raw.githubusercontent.com/wraith13/jsonarch/master/template-json-schema.json#",
    "$arch": "template",
    "return":
    {
        "message":
        {
            "$arch": "call",
            "refer": "string.join",
            "parameter":
            [
                "Hello, ",
                {
                    "$arch": "value",
                    "refer": ["parameter","name"]
                },
                "!"
            ]
        }
    }
}
